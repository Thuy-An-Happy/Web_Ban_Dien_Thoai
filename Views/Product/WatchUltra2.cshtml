
@{
    ViewBag.Title = "WatchUltra2";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<h2>WatchUltra2</h2>
<link href="~/Content/style_K/Style_TrangCuThe.css" rel="stylesheet" />
<section class="container">
    @*Hình ảnh sản phẩm*@
    <div class="product-image">
        <img src="~/Content/img/0030238_apple-watch-ultra-2-gps-cellular-49mm-ocean-2024_240.png" alt="iPhone 14 Plus">
    </div>

    @*Thông tin sản phẩm*@
<div class="product-info">
