
@{
    ViewBag.Title = "Xiaomi_POCO_X7";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<link href="~/Content/style_K/Style_TrangCuThe.css" rel="stylesheet" />
<section class="container">
    @*Hình ảnh sản phẩm*@
    <div class="product-image">
        <img src="https://cdn2.cellphones.com.vn/insecure/rs:fill:358:358/q:90/plain/https://cellphones.com.vn/media/catalog/product/d/i/dien-thoai-xiaomi-poco-x7-5g.png"
             alt="Xiaomi POCO X7 5G 12GB 512GB" />
    </div>

    @*Thông tin sản phẩm*@
    <div class="product-info">
        <h1>Xiaomi POCO X7 5G</h1>
        <p class="price">7.990.000₫ </p>
        <p class="vat">(Đã bao gồm VAT)</p>

        <div class="section">
            <h3>Dung lượng</h3>
            <div class="options">
                
                <button class="option active">12GB 512GB</button>
                
            </div>
        </div>

        <div class="section">
            <h3>Ưu đãi</h3>
            <ul class="offers">
                <li>Giảm 200.000đ khi thanh toán qua VNPAY.</li>
                <li>Hỗ trợ trả góp 0% lãi suất.</li>
                <li>Ốp lưng chính hãng giảm 990.000đ khi mua kèm.</li>
                <li>Thu cũ đổi mới – trợ giá lên đến 1.000.000đ.</li>
            </ul>
        </div>

        <button class="buy-btn">MUA NGAY</button>
    </div>
    <script src="~/Content/js/Cart_JS.js"></script>
</section>
