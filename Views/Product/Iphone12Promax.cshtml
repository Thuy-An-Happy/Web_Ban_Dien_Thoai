
@{
    ViewBag.Title = "Iphone12Promax";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<link href="~/Content/style_K/Style_TrangCuThe.css" rel="stylesheet" />
<section class="container">
    @*Hình ảnh sản phẩm*@
    <div class="product-image">
        <img src="https://cdn2.cellphones.com.vn/x/media/catalog/product/d/o/download_2__1_27.png" alt="IPhone 12 Pro Max" />
    </div>

    @*Thông tin sản phẩm*@
    <div class="product-info">
        <h1>iPhone 12 Promax</h1>
        <p class="price">23.490.000₫ @*Note:Để span thì tổng tiền sai nên để chế đọ note <span class="old-price">27.990.000₫</span>*@</p>
        <p class="vat">(Đã bao gồm VAT)</p>

        <div class="section">
            <h3>Dung lượng</h3>
            <div class="options">
                <button class="option active">128GB</button>
                <button class="option">256GB</button>
                <button class="option">512GB</button>
            </div>
        </div>

        <div class="section">
            <h3>Màu sắc</h3>
            <div class="colors">

                <span class="color black"></span>
                <span class="color red active"></span>
                <span class="color blue"></span>
                <span class="color yellow"></span>
            </div>
        </div>

        <div class="section">
            <h3>Ưu đãi</h3>
            <ul class="offers">
                <li>Giảm 200.000đ khi thanh toán qua VNPAY.</li>
                <li>Hỗ trợ trả góp 0% lãi suất.</li>
                <li>Ốp lưng chính hãng giảm 990.000đ khi mua kèm.</li>
                <li>Thu cũ đổi mới – trợ giá lên đến 1.000.000đ.</li>
            </ul>
        </div>

        <button class="buy-btn">MUA NGAY</button>
    </div>
    <script src="~/Content/js/Cart_JS.js"></script>
</section>


